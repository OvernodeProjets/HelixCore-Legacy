      <!-- Servers Table -->
      <div class="mt-8 pb-24">
        <div class="bg-gray-800 shadow-lg rounded-lg overflow-hidden border border-gray-700">
          <div class="px-6 py-4 border-b border-gray-700 flex justify-between items-center">
            <h3 class="text-lg font-medium text-white">Server List</h3>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-700">
              <thead class="bg-gray-900">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Name</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">CPU</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">RAM</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Disk</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider details-column hidden">Database</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider details-column hidden">Backup</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider details-column hidden">Allocation</th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-gray-800 divide-y divide-gray-700">
                <% if (servers.length == 0) { %>
                  <tr>
                    <td colspan="9" class="px-6 py-8 whitespace-nowrap text-sm text-center">
                      <div class="text-gray-400 mb-2">No servers found yet</div>
                      <div class="text-gray-500 text-xs">Get started by creating your first server!</div>
                      <a href="../create-server" class="inline-block mt-4 px-4 py-2 border border-indigo-500 text-indigo-400 rounded-md hover:bg-indigo-500 hover:text-white transition-colors duration-200">Create Server</a>
                    </td>
                  </tr>
                <% } else { %>
                  <% for (let server of servers) { %>
                  <tr class="hover:bg-gray-700/50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">
                      <%= server.attributes.name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                      <%= server.attributes.identifier %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-blue-500 rounded-full h-2" style="width: <%= (server.attributes.limits.cpu / max.cpu) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.limits.cpu %>%</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-green-500 rounded-full h-2" style="width: <%= (server.attributes.limits.memory / max.ram) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.limits.memory %>MB</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-purple-500 rounded-full h-2" style="width: <%= (server.attributes.limits.disk / max.disk) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.limits.disk %>MB</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400 details-column hidden">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-yellow-500 rounded-full h-2" style="width: <%= (server.attributes.feature_limits.databases / max.database) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.feature_limits.databases %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400 details-column hidden">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-red-500 rounded-full h-2" style="width: <%= (server.attributes.feature_limits.backups / max.backup) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.feature_limits.backups %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400 details-column hidden">
                      <div class="flex items-center">
                        <div class="w-16 bg-gray-700 rounded-full h-2">
                          <div class="bg-indigo-500 rounded-full h-2" style="width: <%= (server.attributes.feature_limits.allocations / max.allocation) * 100 %>%"></div>
                        </div>
                        <span class="ml-2"><%= server.attributes.feature_limits.allocations %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <div class="flex justify-end space-x-3">
                        <a href="../edit-server?id=<%= server.attributes.id %>" class="text-blue-400 hover:text-blue-300 transition-colors">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                        </a>
                        <a href="../delete-server/<%= server.attributes.id %>" class="text-red-400 hover:text-red-300 transition-colors">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                        </a>
                      </div>
                    </td>
                  </tr>
                  <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
              const seeMoreBtn = document.getElementById('seeMoreBtn');
              const hiddenCards = document.getElementById('hiddenCards');
              const detailsColumns = document.querySelectorAll('.details-column');
              let isExpanded = false;
          
              seeMoreBtn.addEventListener('click', function() {
                  detailsColumns.forEach(column => {
                    column.classList.toggle('hidden');
                  });

                  isExpanded = !isExpanded;
                  hiddenCards.classList.toggle('hidden');
                  seeMoreBtn.innerHTML = isExpanded ? 'See Less â†‘' : 'See More â†“';
              });
          });
        </script>

    </div>
  </div>
</main>

